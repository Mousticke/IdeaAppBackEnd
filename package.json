{
  "name": "ideaappbackend",
  "version": "2.0.1",
  "description": "Back end written in Express for IdeaApp",
  "main": "src/index.js",
  "scripts": {
    "start-dev": "cross-env NODE_ENV=development nodemon --exec babel-node src/index.js",
    "start-test": "cross-env NODE_ENV=test nodemon --exec babel-node src/index.js",
    "start-production": "cross-env NODE_ENV=production npm run build && node ./build/index.js",
    "test": "cross-env NODE_ENV=test mocha --require @babel/register 'test/**/*.test.js' --reporter mocha-circleci-reporter --timeout 10000 --exit",
    "test-users": "cross-env NODE_ENV=test mocha --require @babel/register 'test/user/*.test.js' --reporter mocha-circleci-reporter --timeout 10000 --exit",
    "test-userSettings": "cross-env NODE_ENV=test mocha --require @babel/register 'test/userSettings/*.test.js' --reporter mocha-circleci-reporter --timeout 10000 --exit",
    "test-ideas": "cross-env NODE_ENV=test mocha --require @babel/register 'test/idea/*.test.js' --reporter mocha-circleci-reporter --timeout 10000 --exit",
    "report": "npm run delete-report && cross-env NODE_ENV=test nyc --reporter=lcov mocha --require @babel/register 'test/**/*.js' --timeout 5000 --exit",
    "text-report": "npm run delete-report && cross-env NODE_ENV=test nyc --reporter=text-summary mocha --require @babel/register 'test/**/*.js' --timeout 5000 --exit",
    "delete-report": "rm -rf test/report",
    "nyc": "npm run delete-report && cross-env NODE_ENV=test nyc mocha --require @babel/register 'test/**/*.js' --reporter mocha-circleci-reporter > coverage.xml --timeout 10000 --exit",
    "format": "eslint --fix ./src ./test",
    "clean": "rm -rf build && mkdir build",
    "build-babel": "cross-env NODE_ENV=production babel -d ./build --extensions \".ts,.js\" --copy-files ./src -s ",
    "build-production": "npm install && npm run clean && npm run build-babel",
    "heroku-postbuild": "npm run build-production",
    "preinstall": "npx npm-force-resolutions"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Mousticke/IdeaAppBackEnd.git"
  },
  "author": "Akim Benchiha",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Mousticke/IdeaAppBackEnd/issues"
  },
  "resolutions": {
    "ansi-regex": ">=5.0.1",
    "set-value": ">=4.0.1",
    "mpath": ">=0.8.4",
    "glob-parent": ">=5.1.2",
    "mquery": ">=3.2.3",
    "yargs-parser": ">=18.1.2",
    "minimist": ">=1.2.3"
  },
  "homepage": "https://github.com/Mousticke/IdeaAppBackEnd#readme",
  "dependencies": {
    "@hapi/joi": "^17.1.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "codecov": "^3.7.1",
    "compression": "^1.7.4",
    "connect-flash": "^0.1.1",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "express-rate-limit": "^5.5.1",
    "express-session": "^1.17.0",
    "helmet": "^3.21.3",
    "http-status-codes": "^1.4.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "mongoose": "^5.9.2",
    "morgan": "^1.9.1",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "swagger-ui-express": "^4.1.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.6",
    "@babel/node": "^7.8.4",
    "@babel/polyfill": "^7.8.3",
    "@babel/preset-env": "^7.8.6",
    "@babel/register": "^7.8.6",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "cross-env": "^7.0.0",
    "eslint": "^6.8.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-mocha": "^6.3.0",
    "mocha": "^7.1.0",
    "mocha-circleci-reporter": "0.0.3",
    "mocha-junit-reporter": "^1.23.3",
    "nodemon": "^2.0.2",
    "nyc": "^15.0.0",
    "supertest": "^4.0.2"
  },
  "nyc": {
    "exclude": [
      "test",
      "node_modules",
      "src/index.js",
      "src/helpers/authToken.js",
      "src/routes/api/index.js",
      "src/config/database/mongoDB.js",
      "src/Models/"
    ],
    "cache": false,
    "report-dir": "./test/report"
  }
}
