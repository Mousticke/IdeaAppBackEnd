{
  "name": "ideaappbackend",
  "version": "1.0.0",
  "description": "Back end written in Express for IdeaApp",
  "main": "src/index.js",
  "scripts": {
    "start-dev": "cross-env NODE_ENV=development nodemon --exec babel-node src/index.js",
    "start-test": "cross-env NODE_ENV=test nodemon --exec babel-node src/index.js",
    "test": "cross-env NODE_ENV=test mocha --require @babel/register 'test/**/*.test.js' --timeout 10000 --exit --env=jsdom",
    "report": "cross-env NODE_ENV=test nyc --reporter=lcov mocha --require @babel/register 'test/**/*.js' --timeout 5000 --exit",
    "text-report": "cross-env NODE_ENV=test nyc --reporter=text-summary mocha --require @babel/register 'test/**/*.js' --timeout 5000 --exit",
    "nyc": "cross-env NODE_ENV=test nyc mocha --require @babel/register 'test/**/*.js' --timeout 5000 --exit",
    "format": "eslint --fix ./src",
    "clean": "rm -rf build && mkdir build",
    "build-babel": "babel -d ./build ./src -s",
    "build": "npm run format && npm run test && npm run clean && npm run build-babel",
    "production": "npm run build && cross-env NODE_ENV=production node ./build/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Mousticke/IdeaAppBackEnd.git"
  },
  "author": "Akim Benchiha",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Mousticke/IdeaAppBackEnd/issues"
  },
  "homepage": "https://github.com/Mousticke/IdeaAppBackEnd#readme",
  "dependencies": {
    "@hapi/joi": "^17.1.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "connect-flash": "^0.1.1",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-session": "^1.17.0",
    "helmet": "^3.21.3",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.15",
    "mongoose": "^5.9.2",
    "morgan": "^1.9.1",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "swagger-ui-express": "^4.1.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.6",
    "@babel/node": "^7.8.4",
    "@babel/polyfill": "^7.8.3",
    "@babel/preset-env": "^7.8.6",
    "@babel/register": "^7.8.6",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "cross-env": "^7.0.0",
    "eslint": "^6.8.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-mocha": "^6.3.0",
    "mocha": "^7.1.0",
    "nodemon": "^2.0.2",
    "nyc": "^15.0.0",
    "supertest": "^4.0.2"
  },
  "nyc": {
    "exclude": [
      "test",
      "node_modules",
      "src/index.js",
      "src/helpers/authToken.js",
      "src/routes/api/index.js",
      "src/config/database/mongoDB.js",
      "src/Models/"
    ],
    "cache": false,
    "report-dir": "./test/report"
  }
}
