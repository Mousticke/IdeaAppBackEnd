{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": [
        "google",
        "plugin:mocha/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "mocha"
    ],
    "rules": {
        "curly": "error",
        "linebreak-style": [
            "error",
            "windows"
        ],
        "indent": ["error", 4]
    }
}